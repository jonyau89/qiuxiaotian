---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, BASE_URL } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`文章 - ${SITE_TITLE}`} description="来自丘小天的专业炒股知识" />
		<style>
			main {
				width: 960px;
			}
			.articles-filter {
				margin-bottom: 2rem;
				padding-bottom: 1rem;
				border-bottom: 1px solid rgb(var(--gray-light));
				display: flex;
				justify-content: space-between;
				align-items: center;
				flex-wrap: wrap;
				gap: 1rem;
			}
			.filter-tabs {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}
			.filter-tab {
				padding: 0.25rem 1rem;
				background-color: #f5f5f5;
				color: rgb(var(--gray-dark));
				border: 1px solid rgb(var(--gray-light));
				border-radius: 20px;
				font-size: 0.875rem;
				cursor: pointer;
				transition: all 0.3s ease;
			}
			.filter-tab.active,
			.filter-tab:hover {
				background-color: var(--accent);
				color: white;
				border-color: var(--accent);
			}
			.filter-sort select {
				padding: 0.25rem 1rem;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 4px;
				font-size: 0.875rem;
			}
			ul {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: 100%;
				background-color: white;
				border-radius: 12px;
				padding: 1.5rem;
				transition: all 0.3s ease;
				border: 1px solid rgb(var(--gray-light));
			}
			ul li:hover {
				transform: translateY(-5px);
				box-shadow: var(--box-shadow);
				border-color: rgb(var(--gray-light));
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
				height: 100%;
			}
			.article-content {
				flex: 1;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.3;
				margin-bottom: 0.5rem;
				font-size: 1.563rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
				flex-wrap: wrap;
			}
			.article-excerpt {
				color: rgb(var(--gray));
				margin-bottom: 1rem;
				line-height: 1.6;
			}
			.article-meta {
				display: flex;
				gap: 1rem;
				margin-bottom: 1rem;
				font-size: 0.875rem;
				color: rgb(var(--gray));
				flex-wrap: wrap;
			}
			.article-date {
				color: rgb(var(--gray));
			}
			.article-tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin-bottom: 1rem;
			}
			.article-tag {
				display: inline-block;
				padding: 2px 12px;
				background-color: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				border-radius: 9999px;
				font-size: 0.75rem;
				font-weight: 500;
				transition: all 0.3s ease;
			}
			.article-tag:hover {
				background-color: rgb(var(--gray));
				color: white;
			}
			.article-author {
				display: flex;
				align-items: center;
				gap: 0.75rem;
				margin-top: 1rem;
			}
			.author-avatar {
				width: 32px;
				height: 32px;
				border-radius: 50%;
				object-fit: cover;
			}
			.author-name {
				font-size: 0.875rem;
				font-weight: 500;
				color: rgb(var(--gray-dark));
			}
			.pagination {
				display: flex;
				justify-content: center;
				gap: 0.5rem;
				margin-top: 2rem;
			}
			.pagination a {
				padding: 0.5rem 1rem;
				background-color: white;
				color: rgb(var(--gray-dark));
				border: 1px solid rgb(var(--gray-light));
				border-radius: 4px;
				font-size: 0.875rem;
				transition: all 0.3s ease;
			}
			.pagination a:hover,
			.pagination a.active {
				background-color: var(--accent);
				color: white;
				border-color: var(--accent);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			/* 付费文章样式 */
			.paid-article {
				position: relative;
				display: inline-flex;
				align-items: center;
				gap: var(--spacing-xs);
			}
			.paid-badge {
				display: inline-block;
				padding: var(--spacing-xs) var(--spacing-sm);
				background-color: #f59e0b;
				color: white;
				border-radius: 9999px;
				font-size: 0.75rem;
				font-weight: 500;
				animation: pulse 2s infinite;
			}
			.paid-article:hover {
				color: var(--accent);
			}
			.paid-article:hover .paid-badge {
				background-color: var(--accent);
			}
			/* 响应式设计 */
			@media (max-width: 1024px) {
				main {
					width: 100%;
					max-width: 960px;
				}
			}
			@media (max-width: 768px) {
				main {
					padding: 0 var(--spacing-md);
				}
				.articles-filter {
					flex-direction: column;
					align-items: flex-start;
				}
				.filter-tabs {
					width: 100%;
					overflow-x: auto;
					flex-wrap: nowrap;
					padding-bottom: 0.5rem;
				}
				.filter-tab {
					white-space: nowrap;
					font-size: 0.8125rem;
					padding: 0.25rem 0.75rem;
				}
				.filter-sort {
					width: 100%;
				}
				.filter-sort select {
					width: 100%;
					padding: 0.5rem;
				}
				ul li {
					padding: 1rem;
					border-radius: 8px;
				}
				.title {
					font-size: 1.25rem;
				}
				.article-excerpt {
					font-size: 0.9375rem;
					margin-bottom: 0.75rem;
				}
				.article-meta {
					gap: 0.75rem;
					font-size: 0.8125rem;
				}
				.article-tags {
					margin-bottom: 0.75rem;
				}
				.article-tag {
					font-size: 0.7rem;
					padding: 2px 10px;
				}
				.pagination {
					gap: 0.25rem;
					margin-top: 1.5rem;
				}
				.pagination a {
					padding: 0.375rem 0.75rem;
					font-size: 0.8125rem;
				}
			}
			@media (max-width: 480px) {
				main {
					padding: 0 var(--spacing-sm);
				}
				ul li {
					padding: 0.75rem;
				}
				.title {
					font-size: 1.125rem;
					line-height: 1.4;
				}
				.article-excerpt {
					font-size: 0.875rem;
					margin-bottom: 0.5rem;
				}
				.article-meta {
					gap: 0.5rem;
					font-size: 0.75rem;
				}
				.article-tags {
					margin-bottom: 0.5rem;
				}
				.article-author {
					margin-top: 0.75rem;
					gap: 0.5rem;
				}
				.author-name {
					font-size: 0.75rem;
				}
				.pagination {
					flex-wrap: wrap;
				}
				.pagination a {
					padding: 0.25rem 0.5rem;
					font-size: 0.75rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
			<h1>文章</h1>
			<p>来自丘小天的专业炒股知识</p>
				
				<!-- 文章筛选 -->
				<div class="articles-filter">
					<div class="filter-tabs">
						<button class="filter-tab active">全部</button>
						<button class="filter-tab">操盘技巧</button>
						<button class="filter-tab">技术分析</button>
						<button class="filter-tab">基本面分析</button>
						<button class="filter-tab">风险管理</button>
						<button class="filter-tab">市场分析</button>
					</div>
					<div class="filter-sort">
						<select>
							<option value="latest">最新发布</option>
							<option value="popular">最多阅读</option>
							<option value="comments">最多评论</option>
						</select>
					</div>
				</div>
				
				<ul>
					{
						posts.map((post) => (
							<li>
								{post.data.externalLink ? (
						<a href={post.data.externalLink} target="_blank" class={post.data.paid ? 'paid-article' : ''}>
							<h4 class="title">
								{post.data.title}
								{post.data.paid && <span class="paid-badge">付费</span>}
							</h4>
							<p class="article-excerpt">{post.data.description}</p>
							{post.data.tags && (
								<div class="article-tags">
									{post.data.tags.map((tag) => (
										<span class="article-tag">{tag}</span>
									))}
								</div>
							)}
							<div class="article-meta">
								<span class="article-date">
									<FormattedDate date={post.data.pubDate} />
								</span>
								{post.data.views && (
									<span class="article-views"><i class="far fa-eye"></i> {post.data.views}</span>
								)}
							</div>
							{post.data.author && (
								<div class="article-author">
									{post.data.authorAvatar && (
										<img src={post.data.authorAvatar} alt={post.data.author} class="author-avatar" />
									)}
									<span class="author-name">{post.data.author}</span>
								</div>
							)}
						</a>
					) : (
						<a href={`${BASE_URL}/blog/${post.id}/`} class={post.data.paid ? 'paid-article' : ''}>
							<h4 class="title">
								{post.data.title}
								{post.data.paid && <span class="paid-badge">付费</span>}
							</h4>
							<p class="article-excerpt">{post.data.description}</p>
							{post.data.tags && (
								<div class="article-tags">
									{post.data.tags.map((tag) => (
										<span class="article-tag">{tag}</span>
									))}
								</div>
							)}
							<div class="article-meta">
								<span class="article-date">
									<FormattedDate date={post.data.pubDate} />
								</span>
								{post.data.views && (
									<span class="article-views"><i class="far fa-eye"></i> {post.data.views}</span>
								)}
							</div>
							{post.data.author && (
								<div class="article-author">
									{post.data.authorAvatar && (
										<img src={post.data.authorAvatar} alt={post.data.author} class="author-avatar" />
									)}
									<span class="author-name">{post.data.author}</span>
								</div>
							)}
						</a>
					)}
							</li>
						))
					}
				</ul>
				
				<!-- 分页 -->
				<div class="pagination">
					<a href="#">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#">4</a>
					<a href="#">5</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
