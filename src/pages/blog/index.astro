---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`文章 - ${SITE_TITLE}`} description="来自丘小天的专业炒股知识" />
		<style>
			main {
				width: 960px;
			}
			.articles-filter {
				margin-bottom: 2rem;
				padding-bottom: 1rem;
				border-bottom: 1px solid rgb(var(--gray-light));
				display: flex;
				justify-content: space-between;
				align-items: center;
				flex-wrap: wrap;
				gap: 1rem;
			}
			.filter-tabs {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}
			.filter-tab {
				padding: 0.25rem 1rem;
				background-color: #f5f5f5;
				color: rgb(var(--gray-dark));
				border: 1px solid rgb(var(--gray-light));
				border-radius: 20px;
				font-size: 0.875rem;
				cursor: pointer;
				transition: all 0.3s ease;
			}
			.filter-tab.active,
			.filter-tab:hover {
				background-color: var(--accent);
				color: white;
				border-color: var(--accent);
			}
			.filter-sort select {
				padding: 0.25rem 1rem;
				border: 1px solid rgb(var(--gray-light));
				border-radius: 4px;
				font-size: 0.875rem;
			}
			ul {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: 100%;
				background-color: white;
				border-radius: 12px;
				padding: 1.5rem;
				transition: all 0.3s ease;
				border: 1px solid rgb(var(--gray-light));
			}
			ul li:hover {
				transform: translateY(-5px);
				box-shadow: var(--box-shadow);
				border-color: rgb(var(--gray-light));
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li a {
				display: block;
				height: 100%;
			}
			.article-content {
				flex: 1;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.3;
				margin-bottom: 0.5rem;
				font-size: 1.563rem;
			}
			.article-excerpt {
				color: rgb(var(--gray));
				margin-bottom: 1rem;
				line-height: 1.6;
			}
			.article-meta {
				display: flex;
				gap: 1rem;
				margin-bottom: 1rem;
				font-size: 0.875rem;
				color: rgb(var(--gray));
				flex-wrap: wrap;
			}
			.article-date {
				color: rgb(var(--gray));
			}
			.article-tags {
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
				margin-bottom: 1rem;
			}
			.article-tag {
				display: inline-block;
				padding: 2px 12px;
				background-color: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				border-radius: 9999px;
				font-size: 0.75rem;
				font-weight: 500;
				transition: all 0.3s ease;
			}
			.article-tag:hover {
				background-color: rgb(var(--gray));
				color: white;
			}
			.article-author {
				display: flex;
				align-items: center;
				gap: 0.75rem;
				margin-top: 1rem;
			}
			.author-avatar {
				width: 32px;
				height: 32px;
				border-radius: 50%;
				object-fit: cover;
			}
			.author-name {
				font-size: 0.875rem;
				font-weight: 500;
				color: rgb(var(--gray-dark));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			@media (max-width: 720px) {
				.articles-filter {
					flex-direction: column;
					align-items: flex-start;
				}
				ul li {
					padding: 1rem;
				}
				.title {
					font-size: 1.25rem;
				}
				.article-meta {
					gap: 0.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
			<h1>文章</h1>
			<p>来自丘小天的专业炒股知识</p>
				
				<!-- 文章筛选 -->
				<div class="articles-filter">
					<div class="filter-tabs">
						<button class="filter-tab active">全部</button>
						<button class="filter-tab">操盘技巧</button>
						<button class="filter-tab">技术分析</button>
						<button class="filter-tab">基本面分析</button>
						<button class="filter-tab">风险管理</button>
						<button class="filter-tab">市场分析</button>
					</div>
					<div class="filter-sort">
						<select>
							<option value="latest">最新发布</option>
							<option value="popular">最多阅读</option>
							<option value="comments">最多评论</option>
						</select>
					</div>
				</div>
				
				<ul>
					{
						posts.map((post) => (
							<li>
								{post.data.externalLink ? (
									<a href={post.data.externalLink} target="_blank" class={post.data.isPaid ? 'paid-article' : ''}>
										<h4 class="title">
											{post.data.title}
											{post.data.isPaid && <span class="paid-badge">付费</span>}
										</h4>
										<p class="article-excerpt">{post.data.description}</p>
										{post.data.tags && (
											<div class="article-tags">
												{post.data.tags.map((tag) => (
													<span class="article-tag">{tag}</span>
												))}
											</div>
										)}
										<div class="article-meta">
											<span class="article-date">
												<FormattedDate date={post.data.pubDate} />
											</span>
											{post.data.views && (
												<span class="article-views"><i class="far fa-eye"></i> {post.data.views}</span>
											)}
										</div>
										{post.data.author && (
											<div class="article-author">
												{post.data.authorAvatar && (
													<img src={post.data.authorAvatar} alt={post.data.author} class="author-avatar" />
												)}
												<span class="author-name">{post.data.author}</span>
											</div>
										)}
									</a>
								) : (
									<a href={`/blog/${post.id}/`}>
										<h4 class="title">{post.data.title}</h4>
										<p class="article-excerpt">{post.data.description}</p>
										{post.data.tags && (
											<div class="article-tags">
												{post.data.tags.map((tag) => (
													<span class="article-tag">{tag}</span>
												))}
											</div>
										)}
										<div class="article-meta">
											<span class="article-date">
												<FormattedDate date={post.data.pubDate} />
											</span>
											{post.data.views && (
												<span class="article-views"><i class="far fa-eye"></i> {post.data.views}</span>
											)}
										</div>
										{post.data.author && (
											<div class="article-author">
												{post.data.authorAvatar && (
													<img src={post.data.authorAvatar} alt={post.data.author} class="author-avatar" />
												)}
												<span class="author-name">{post.data.author}</span>
											</div>
										)}
									</a>
								)}
							</li>
						))
					}
				</ul>
				
				<!-- 分页 -->
				<div class="pagination">
					<a href="#">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#">4</a>
					<a href="#">5</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
