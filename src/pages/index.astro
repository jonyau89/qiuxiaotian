---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, BASE_URL } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page-container">
			<!-- 英雄区域 -->
			<section class="hero">
				<h1>混沌中跟随规律</h1>
			</section>
			
			<!-- 最新文章 -->
			<section class="articles-section">
				<div class="section-header">
					<h2>最新文章</h2>
					<p>韭菜心得与随笔</p>
				</div>
				
				<div class="articles-list">
					{posts.map((post) => (
						<article class="article-item">
							<div class="article-meta">
								<span class="article-date">
									<FormattedDate date={post.data.pubDate} />
								</span>
								<span class="article-views">
									<i class="far fa-eye"></i> {post.data.views || 0}
								</span>
							</div>
							<div class="article-content">
								<h3><a href={`${BASE_URL}/blog/${post.id}/`}>{post.data.title}</a></h3>
								<p class="article-excerpt">{post.data.description || '暂无摘要'}</p>
								{post.data.tags && (
									<div class="article-tags">
										{post.data.tags.map((tag) => (
											<span class="article-tag">{tag}</span>
										))}
									</div>
								)}
								<div class="article-author">
									<span class="author-name">{post.data.author || '丘小天'}</span>
								</div>
							</div>
						</article>
					))}
				</div>
				
				<div class="pagination">
					<a href="#" class="touch-friendly">1</a>
					<a href="#" class="touch-friendly">2</a>
					<a href="#" class="touch-friendly">3</a>
					<a href="#" class="touch-friendly">4</a>
					<a href="#" class="touch-friendly">5</a>
				</div>
			</section>
			
			<!-- 工具预览 -->
			<section class="tools-preview">
				<div class="section-header">
					<h2>实用工具</h2>
					<p>专业的炒股工具，助您投资更轻松</p>
				</div>
				<p class="text-center mb-5">
				<a href={`${BASE_URL}/tools`} class="tools-link">查看全部工具 <i class="fas fa-arrow-right"></i></a>
			</p>
			</section>
		</main>
		<Footer />
	</body>
</html>
