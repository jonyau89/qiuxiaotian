---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title="关于我" description="一名下岗程序员叠加老股民" />
		<style>
			.page-container {
				min-height: 80vh;
				display: flex;
				align-items: center;
				justify-content: center;
				text-align: center;
				padding: 2rem 0;
			}
			.about-intro {
				padding: 2rem;
			}
			.about-intro h1 {
				margin: 1rem 0;
				font-size: 2rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-container">
				<section class="about-intro">
					<h1>一名下岗程序员叠加老股民</h1>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>
